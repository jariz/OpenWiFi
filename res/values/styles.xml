<resources>

    <style name="OpenWiFi.Light.Dark" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="circularProgressBarStyle">@style/OpenWiFi.Circular.Light</item>
        <item name="drawerColor">#ffececec</item>
        <item name="sectionHeaderColor">#ff545454</item>
        <item name="sectionHeaderLine">@drawable/section_header_light</item>
    </style>

    <style name="OpenWiFi.Light" parent="android:Theme.Holo.Light">
        <item name="circularProgressBarStyle">@style/OpenWiFi.Circular.Light</item>
        <item name="drawerColor">#ffececec</item>
        <item name="sectionHeaderColor">#ff545454</item>
        <item name="sectionHeaderLine">@drawable/section_header_light</item>
    </style>

    <style name="OpenWiFi.Wallpaper" parent="android:Theme.Holo.Wallpaper">
        <item name="circularProgressBarStyle">@style/OpenWiFi.Circular</item>
        <item name="android:windowBackground">@drawable/openwifi_wallpaper_gradient</item>
        <item name="drawerColor">#4C000000</item>
        <item name="sectionHeaderColor">@color/emphasis</item>
        <item name="sectionHeaderLine">@drawable/section_header</item>
    </style>

    <style name="OpenWiFi" parent="android:Theme.Holo">
        <item name="circularProgressBarStyle">@style/OpenWiFi.Circular</item>
        <item name="drawerColor">#111</item>
        <item name="sectionHeaderColor">@color/emphasis</item>
        <item name="sectionHeaderLine">@drawable/section_header</item>
    </style>

    <style name="OpenWiFi.Circular.Light">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">1</item>
        <item name="progress_color">@android:color/darker_gray</item>
        <item name="progress_background_color">@android:color/darker_gray</item>
    </style>

    <style name="OpenWiFi.Circular">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="stroke_width">5dp</item>
        <item name="progress" format="float">1</item>
        <item name="progress_color">@android:color/darker_gray</item>
        <item name="progress_background_color">@android:color/background_light</item>
    </style>

    <style name="OpenWiFi.sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableBottom">?attr/sectionHeaderLine</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/sectionHeaderColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme" parent="OpenWiFi">
    </style>

</resources>
